<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Simulador recorridos</title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  </head>
  <body>

<h1>Recorridos</h1>

<div class="container">

    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <label>Selecciona horario: </label>
              <input type="date" name="horario" >
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="origen" placeholder="Escribe el origen ej: Los lagos">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="destino" 
                placeholder="Escribe el destino ej: Valdivia">
            </div>
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <br>

    <!-- LIST -->
    <div class="col-md-10">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>NÂ°</th>
            <th>Horario</th>
            <th>Origen</th>
            <th>Destino</th>
            <th>Operaciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < recorridos.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><%= recorridos[i].horario %></td>
              <td><%= recorridos[i].origen %></td>
              <td><%= recorridos[i].destino %></td>
              <td>
                <a
                  class="btn btn-success"
                  href="#">Done</a>
                <a href="#"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="#" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>

</div>

  </body>
</html>
